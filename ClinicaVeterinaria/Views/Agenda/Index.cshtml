@model IEnumerable<ClinicaVeterinaria.Models.Agenda>

@{
    ViewData["Title"] = "Agenda";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-default">Agendar</a>
</p>

<br />
<br />

<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <form class="navbar-form navbar-left" role="search">
            <div class="form-group">
                <div class="form-group">
                    <label for="minDate">Min Date</label>
                    <input type="date" class="form-control" name="minDate" value=@ViewData["minDate"] />
                </div>
                <div class="form-group">
                    <label for="maxDate">Max Date</label>
                    <input type="date" class="form-control" name="maxDate" value=@ViewData["maxDate"] />
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Buscar</button>
        </form>
    </div>
</nav>
<div>
    <div >
        <table class="table table-striped table-hover">
            <thead>
                <tr class="success">
                    <th>
                        @Html.DisplayNameFor(model => model.DataConsulta)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Pet)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Veterinario)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Pet.Proprietario)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataConsulta)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pet.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Veterinario.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pet.Proprietario.Nome)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>