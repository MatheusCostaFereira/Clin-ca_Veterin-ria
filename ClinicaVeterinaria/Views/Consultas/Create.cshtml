@model ClinicaVeterinaria.Models.Consulta

@{
    ViewData["Title"] = "Cadastrar";
}

<h2>@ViewData["Title"]</h2>

<h4>Consulta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Data_Consulta" class="control-label"></label>
                <input asp-for="Data_Consulta" class="form-control" />
                <span asp-validation-for="Data_Consulta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PetId" class="control-label"></label>
                <select asp-for="PetId" class ="form-control" asp-items="ViewBag.PetId"></select>
            </div>
            <div class="form-group">
                <label asp-for="VeterinarioId" class="control-label"></label>
                <select asp-for="VeterinarioId" class ="form-control" asp-items="ViewBag.VeterinarioId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Receita" class="control-label"></label>
                <textarea cols="8" rows="6" asp-for="Receita" class="form-control"></textarea>
                <span asp-validation-for="Receita" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Motivo" class="control-label"></label>
                <textarea cols="8" rows="6" asp-for="Motivo" class="form-control"></textarea>
                <span asp-validation-for="Motivo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <textarea cols="8" rows="6" asp-for="Descricao" class="form-control"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExamesRealizados" class="control-label"></label>
                <textarea  cols="8" rows="6" asp-for="ExamesRealizados" class="form-control" ></textarea>
                <span asp-validation-for="ExamesRealizados" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

